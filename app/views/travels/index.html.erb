<div class="my-5">
  <%= render 'shared/header' %>
</div>

<main>
  <div class="container">
    <div class="row gy-4">
      <% @travels.each do |travel| %>
        <div class="col-12 col-md-4 col-lg-3">
          <article class="travel-card bg-white rounded h-100 card border-0 ">
            <div class="travel-card__image">
              <%= image_tag travel.image_url, height: 150, class: "img-fluid" %>
            </div>
            <div class="travel-card__infos p-2 flex-grow-1">
              <h5><%= travel.title %></h5>
              <%= render "shared/rating", travel: travel %>

              <p><%= truncate(travel.description, length: 80) %></p>
            </div>
            <div class="travel-card__footer p-2 text-end">
              <%= link_to "Voir plus", travel_path(travel), class: "btn btn-primary"  %>
            </div>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</main>
